= form_for(@revision) do |f|
  - if @revision.errors.any?
    #error_explanation
      %h2
        = pluralize(@revision.errors.count, "error")
        prohibited this revision from being saved:
      %ul
        - @revision.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .actions
    = f.submit
